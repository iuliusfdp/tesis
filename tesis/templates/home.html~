<script>
$( document ).ready(function() {

function obtvalor(){
$("#var").hide();
$("#var2").hide();
var valor = $("select.micontrol option:selected").val();
if(valor=="Nacional"){
	$("#var").show();
}
else if(valor=="Internacional"){
	$("#var2").show();
}
}

$("select").change(obtvalor);
obtvalor();

});
</script>

