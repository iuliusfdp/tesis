<script>
$( document ).ready(function() {

function obtvalor(){
$("#container").hide();
$("#tabla").hide();

var valor = $("select.control option:selected").val();
if(valor=="0"){
	$("#tabla").show();
}
else if(valor=="1"){
	$("#container").show();
}
}

$("select").change(obtvalor);
obtvalor();

});

$(function(){
    $('#container').highcharts({
        title: {
            text: 'Gráfica',
            x: -20 //center
        },
        subtitle: {
            text: 'Fuente: INE',
            x: -20
        },
        xAxis: {
            categories: ['2010', '2011', '2012', '2013', '2014']
        },
        yAxis: {
            title: {
                text: 'Población'
            },
            plotLines: [{
                value: 0,
                width: 1,
                color: '#808080'
            }]
        },
        tooltip: {
            valueSuffix: 'hab'
        },
        legend: {
            layout: 'vertical',
            align: 'right',
            verticalAlign: 'middle',
            borderWidth: 0
        },
        series: [{
            name: 'La Araucanía',
            data: [7.0, 6.9, 9.5, 14.5, 18.2]
        }, {
            name: 'Los Ríos',
            data: ['0.1', 0.8, 5.7, 11.3, 17.0]
        }, {
            name: 'Los Lagos',
            data: [-0.9, 0.6, 3.5, 8.4, 13.5]
        }]
});

});
</script>

