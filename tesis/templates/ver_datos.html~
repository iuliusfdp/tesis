<script type="text/javascript" src="static/jquery-2.0.3.min.js"></script>

<script>
$( document ).ready(function() {


function obtvalor(){
	$("#tablaimacec").hide();
	$("#tablapib").hide();
	$("#tablaipi").hide();
	$("#ima").hide();
	$("#pb").hide();
	$("#ip").hide();

	var valor = $("select.form-control option:selected").val();
	if(valor=="imacec"){
		$("#tablaimacec").show();
		$("#ima").show();
	}
	else if(valor=="pib"){
		$("#tablapib").show();
		$("#pb").show();
	}
	else if(valor=="ipi"){
		$("#tablaipi").show();
		$("#ip").show();
	}
	}

	$("select").change(obtvalor);
	obtvalor();

});
</script>

